#!/usr/bin/env bash
# Manages the manage_my_process daemon (start|stop|restart)

PID_FILE="/var/run/my_process.pid"
SCRIPT_DIR="$(dirname "$0")"
DAEMON="$SCRIPT_DIR/manage_my_process"

case "$1" in
    start)
        "$DAEMON" &
        echo $! > "$PID_FILE"
        echo "manage_my_process started"
        ;;
    stop)
        if [ -f "$PID_FILE" ]; then
            PID="$(cat "$PID_FILE")"
            if [ -n "$PID" ]; then
                kill "$PID" 2>/dev/null
            fi
            rm -f "$PID_FILE"
        fi
        echo "manage_my_process stopped"
        ;;
    restart)
        if [ -f "$PID_FILE" ]; then
            PID="$(cat "$PID_FILE")"
            if [ -n "$PID" ]; then
                kill "$PID" 2>/dev/null
            fi
            rm -f "$PID_FILE"
        fi
        "$DAEMON" &
        echo $! > "$PID_FILE"
        echo "manage_my_process restarted"
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        exit 1
        ;;
esac
