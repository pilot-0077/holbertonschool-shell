#!/usr/bin/env bash
# Creates /var/run/myscript.pid, prints forever, and handles signals.

PID_FILE="/var/run/myscript.pid"

cleanup() {
  rm -f "$PID_FILE"
  exit 0
}

# Make sure /var/run exists (some sandboxes/jails may not have it as expected)
mkdir -p /var/run

# Create PID file immediately
printf "%d\n" "$$" > "$PID_FILE"

trap 'echo "I hate the kill command"; cleanup' SIGTERM
trap 'echo "Y U no love me?!"' SIGINT
trap 'cleanup' SIGQUIT

while true; do
  echo "To infinity and beyond"
  sleep 2
done
