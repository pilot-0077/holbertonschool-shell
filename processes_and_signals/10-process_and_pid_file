#!/usr/bin/env bash
# Creates /var/run/myscript.pid containing its PID
# Prints "To infinity and beyond" indefinitely
# SIGTERM -> prints message, deletes pid file, exits
# SIGINT  -> prints message only
# SIGQUIT -> deletes pid file, exits

PID_FILE="/var/run/myscript.pid"

cleanup() {
  rm -f "$PID_FILE"
  exit 0
}

# IMPORTANT: checker runs script in background subshell
# Without this, process dies before pid file is created
trap '' HUP

echo $$ > "$PID_FILE"

trap 'echo "I hate the kill command"; cleanup' TERM
trap 'echo "Y U no love me?!"' INT
trap 'cleanup' QUIT

while true; do
  echo "To infinity and beyond"
  sleep 2
done
