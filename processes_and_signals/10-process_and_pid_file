#!/usr/bin/env bash
# Creates /var/run/myscript.pid containing its PID

PID_FILE="/var/run/myscript.pid"

cleanup() {
  rm -f "$PID_FILE"
  exit 0
}

# Write PID to file
echo "$$" > "$PID_FILE"

# SIGTERM: message + remove PID file + exit
trap 'echo "I hate the kill command"; cleanup' SIGTERM

# SIGINT: only message, do not remove PID file in this task
trap 'echo "Y U no love me?!"; exit 0' SIGINT

# SIGQUIT: remove PID file and exit
trap 'cleanup' SIGQUIT

while true; do
  echo "To infinity and beyond"
  sleep 2
done
