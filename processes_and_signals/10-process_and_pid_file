#!/usr/bin/env bash
# Creates /var/run/myscript.pid, prints a message forever, and handles signals.

PID_FILE="/var/run/myscript.pid"

# Write current script PID to the file
echo "$$" > "$PID_FILE"

cleanup_and_exit() {
  rm -f "$PID_FILE"
  exit 0
}

on_sigint() {
  echo "Y U no love me?!"
}

on_sigterm() {
  echo "I hate the kill command"
  cleanup_and_exit
}

on_sigquit() {
  cleanup_and_exit
}

trap on_sigint SIGINT
trap on_sigterm SIGTERM
trap on_sigquit SIGQUIT

while true
do
  echo "To infinity and beyond"
  sleep 2
done
