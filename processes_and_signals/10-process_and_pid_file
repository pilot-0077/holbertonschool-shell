#!/usr/bin/env bash
# Creates /var/run/myscript.pid containing its PID
# Prints "To infinity and beyond" indefinitely (sleep 2)
# SIGTERM: prints "I hate the kill command", removes PID file and exits
# SIGINT : prints "Y U no love me?!", removes PID file and exits
# SIGQUIT: removes PID file and exits

PID_FILE="/var/run/myscript.pid"

cleanup() {
  rm -f "$PID_FILE"
  exit 0
}

trap 'echo "I hate the kill command"; cleanup' SIGTERM
trap 'echo "Y U no love me?!"; cleanup' SIGINT
trap 'cleanup' SIGQUIT

# PID faylını yarat
echo "$$" > "$PID_FILE"

while true; do
  echo "To infinity and beyond"
  sleep 2
done
