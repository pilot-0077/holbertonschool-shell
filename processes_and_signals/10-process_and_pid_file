#!/usr/bin/env bash
# Script that creates a PID file and handles signals

PID_FILE="/var/run/myscript.pid"

cleanup() {
    rm -f "$PID_FILE"
    exit 0
}

# Write current PID to the file
echo "$$" > "$PID_FILE"

on_sigterm() {
    echo "I hate the kill command"
    cleanup
}

on_sigint() {
    echo "Y U no love me?!"
    exit 0
}

on_sigquit() {
    cleanup
}

trap 'on_sigterm' SIGTERM
trap 'on_sigint' SIGINT
trap 'on_sigquit' SIGQUIT

while true; do
    echo "To infinity and beyond"
    sleep 2
done
