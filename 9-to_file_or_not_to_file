#!/usr/bin/env bash
# Creates /var/run/myscript.pid, prints forever, and handles signals

PID_FILE="/var/run/myscript.pid"

# Write PID file immediately (before loop)
echo "$$" > "$PID_FILE"

sigterm() {
  echo "I hate the kill command"
  rm -f "$PID_FILE"
  exit 0
}

sigint() {
  echo "Y U no love me?!"
}

sigquit() {
  rm -f "$PID_FILE"
  exit 0
}

trap sigterm SIGTERM
trap sigint SIGINT
trap sigquit SIGQUIT

while true
do
  echo "To infinity and beyond"
  sleep 2
done
